{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/RealEstate.WebApi/bin/Debug/net8.0/RealEstate.WebApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/RealEstate.WebApi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5000"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "Launch React App",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"]
    },
    {
      "name": "Debug React in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Launch Full Stack",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "docker-compose",
      "runtimeArgs": ["up", "--build"],
      "console": "integratedTerminal"
    },
    {
      "name": "Run Tests - Application",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "test-application",
      "program": "dotnet",
      "args": [
        "test",
        "tests/RealEstate.Application.Tests/RealEstate.Application.Tests.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": "Run Tests - WebApi",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "test-webapi",
      "program": "dotnet",
      "args": [
        "test",
        "tests/RealEstate.WebApi.Tests/RealEstate.WebApi.Tests.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": "Run All Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "test-all",
      "program": "dotnet",
      "args": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    }
  ],
  "compounds": [
    {
      "name": "Launch Full Stack (Debug)",
      "configurations": [".NET Core Launch (web)", "Debug React in Chrome"],
      "stopAll": true
    }
  ]
}
